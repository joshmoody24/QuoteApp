@{
    ViewData["Title"] = "Home Page";
}

@model List<Quote> 

<div class="text-center">
    <a asp-action="AddQuote" class="btn btn-success">New Quote</a>
    @foreach (Quote q in Model)
    {
        <div class="card m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@q.Author.FirstName @q.Author.LastName</h5>
                <blockquote class="blockquote font-italic">"@q.QuoteText"</blockquote>
                <a asp-action="QuoteDetails" asp-route-id="@q.QuoteId" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>
