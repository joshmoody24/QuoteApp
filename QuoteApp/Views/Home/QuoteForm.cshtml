@model Quote

<h1>@(ViewBag.EditMode ? "Edit" : "Create") Quote</h1>

<form method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="QuoteText">Quote Text</label>
        <input class="form-control" asp-for="QuoteText" />
    </div>

    <div class="form-group">
        <label asp-for="AuthorId">Author</label>
        <select class="custom-select" asp-for="AuthorId">
            <option value="">Select an author...</option>
            @foreach (Author a in ViewBag.Authors)
            {
                <option value="@a.AuthorId">@a.FirstName @a.LastName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input class="form-control" type="date" asp-for="Date" />
    </div>

    <div class="form-group">
        <label asp-for="SubjectId">Subject</label>
        <select class="custom-select" asp-for="SubjectId">
            <option value="">No subject</option>
            @foreach (Subject s in ViewBag.Subjects)
            {
                <option value="@s.SubjectId">@s.SubjectName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Citation">Citation</label>
        <input class="form-control" asp-for="Citation" />
    </div>

    <button type="submit" class="btn btn-primary">@(ViewBag.EditMode ? "Save Changes" : "Create Quote")</button>

    @if (ViewBag.EditMode)
    {
        <input type="hidden" asp-for="QuoteId" />
    }

</form> 